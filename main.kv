
<Main>:
    BoxLayout:
        padding:70
        orientation:'vertical'
        GridLayout:
            cols:4
            row_force_default:True
            row_default_height:40
            id:main_layout
        GridLayout:
            cols:3
            row_force_default:True
            row_default_height:40
            id:file_pick_layout

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path: "."
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                id: test
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Select"
                on_release: root.load(filechooser.path, filechooser.selection)
